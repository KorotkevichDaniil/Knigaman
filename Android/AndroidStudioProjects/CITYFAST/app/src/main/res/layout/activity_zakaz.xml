<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Zakaz"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оформление заказа"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#E6E6FA"/>
            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Откуда"
                    android:layout_marginTop="20dp"
                    android:textColor="#E6E6FA"/>
                <LinearLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/otkuda"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:hint="Улица"
                        android:gravity="center"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:textColor="#3e575b"
                        android:textSize="17dp" />
                    <EditText
                        android:id="@+id/home"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="дом"
                        android:layout_marginLeft="5dp"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:textColor="#3e575b"
                        android:textSize="17dp" />

                    <EditText
                        android:gravity="center"
                        android:id="@+id/podezd"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="Подъезд"
                        android:textColor="#3e575b"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Куда"
                    android:layout_marginTop="10dp"
                    android:textColor="#E6E6FA"/>
                <LinearLayout
                    android:id="@+id/Layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:gravity="center"
                        android:id="@+id/kuda"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:hint="Улица"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:textColor="#3e575b"
                        android:textSize="17dp" />
                    <EditText
                        android:gravity="center"
                        android:id="@+id/home2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="дом"
                        android:layout_marginLeft="5dp"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:textColor="#3e575b"
                        android:textSize="17dp" />

                    <EditText
                        android:gravity="center"
                        android:id="@+id/podezd2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="Подъезд"
                        android:textColor="#3e575b"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/otchestvo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Добавить адрес"
                    android:textSize="15dp"
                    android:textColor="#E6E6FA"
                    android:background="#0000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Дополнительный адрес"
                    android:textColor="#E6E6FA"/>
                <LinearLayout
                    android:id="@+id/Layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:gravity="center"
                        android:id="@+id/kuda2"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="40dp"
                        android:hint="Улица"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:textColor="#3e575b"
                        android:textSize="17dp" />
                    <EditText
                        android:gravity="center"
                        android:id="@+id/home3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="дом"
                        android:layout_marginLeft="5dp"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:textColor="#3e575b"
                        android:textSize="17dp" />

                    <EditText
                        android:gravity="center"
                        android:id="@+id/podezd3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:hint="Подъезд"
                        android:textColor="#3e575b"
                        android:textColorHint="#3e575b"
                        android:background="@drawable/style"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <!--TODO:Тута должна быть карта-->

                <TextView
                    android:id="@+id/vremya"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Укажите время, во сколько планируется поздка"
                    android:textColor="#E6E6FA"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Spinner
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:background="@drawable/style"
                        android:textColorHint="#E6E6FA"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vremya" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#E6E6FA"
                        android:textSize="20dp"
                        android:hint="Выберите время"
                        android:textColorHint="#E6E6FA"
                        android:text=""
                        android:gravity="center"/>

                </LinearLayout>



                <CheckBox
                    android:id="@+id/check1"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:hint="Детское кресло"
                    android:textColorHint="#E6E6FA"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone" />

                <CheckBox
                    android:id="@+id/check2"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:hint="Перевозка животных"
                    android:textColorHint="#E6E6FA"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/check1" />
                <CheckBox
                    android:id="@+id/check3"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:hint="Некурящий салон"
                    android:textColorHint="#E6E6FA"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/check2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/style"
                    android:text="Заказать"
                    android:layout_marginTop="30dp"
                    android:textColor="#3e575b" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/style"
                    android:text="Отменить"
                    android:textColor="#3e575b" />
            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</LinearLayout>